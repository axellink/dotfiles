alias sshagent='eval $(/usr/bin/ssh-agent) && ssh-add'

launch_vpn() {
	if [ -z "$1" ]; then
		echo "available VPNs : "
		while read l; do
			cut -f 1 -d ';' <<< $l
		done < ~/.vpnrc
	else
		conf=$(egrep -o "^$1;.*" ~/.vpnrc | cut -f2 -d';')
		conf=$(eval echo $conf)
		if [ -z "$conf" ]; then
			echo "Conf not found"
			return 1
		fi
		pushd $(dirname $conf)
		sudo openvpn $(basename $conf)
		popd
	fi
}

alias vimdate='vim $(date +"%Y-%m-%d")'
alias cdtmp='cd $(mktemp -d)'
